{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2016",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": [
      "es2016",
      "esnext.asynciterable",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "../../../typescript-typings",
      "../typescript-typings",
      "node_modules/@lab/typescript-typings",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "dist",
    "**/*/*.test.ts",
    "**/*/*.d.ts",
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/tmp",
    "**/node_modules",
    "**/bower_components",
    "**/dist",
    "**/.next"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
